{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "Preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@metacult/shared-ui": [
        "libs/shared/ui/src/index.ts"
      ],
      "@metacult/shared-ui/styles/*": [
        "libs/shared/ui/src/styles/*"
      ],
      "@metacult/backend/domain": [
        "libs/backend/domain/src/index.ts"
      ],
      "@metacult/backend/infrastructure": [
        "libs/backend/infrastructure/src/index.ts"
      ],
      "@metacult/backend/application": [
        "libs/backend/application/src/index.ts"
      ]
    }
  }
}