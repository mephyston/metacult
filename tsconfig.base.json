{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "Preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@metacult/shared-ui": [
        "libs/shared/ui/src/index.ts"
      ],
      "@metacult/shared-core": [
        "libs/shared/core/src/index.ts"
      ],
      "@metacult/shared-ui/styles/*": [
        "libs/shared/ui/src/styles/*"
      ],
      "@metacult/backend/infrastructure": [
        "libs/backend/infrastructure/src/index.ts"
      ],
      "@metacult/backend/catalog": [
        "libs/backend/catalog/src/index.ts"
      ],
      "@metacult/backend/marketing": [
        "libs/backend/marketing/src/index.ts"
      ],
      "@metacult/backend/discovery": [
        "libs/backend/discovery/src/index.ts"
      ]
    }
  }
}