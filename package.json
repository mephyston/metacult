  "scripts": {
    "dev": "docker-compose up -d && bun db:migrate:prod && nx run-many -t serve --output-style=stream",
    "stop": "docker-compose down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "bun drizzle-kit migrate",
    "db:migrate:release": "bun libs/backend/infrastructure/src/lib/db/migrate-prod.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun libs/backend/infrastructure/src/lib/db/seed.ts",
    "test": "bun test --preload ./test/setup.ts --ignore='apps/e2e/**'",
    "test:e2e": "cd apps/e2e && bunx playwright test --reporter=list",
    "test:e2e:ui": "cd apps/e2e && bunx playwright test --ui",
    "lint:all": "nx run-many -t lint --parallel=3 --max-warnings=150 -p shared-core backend-catalog backend-discovery backend-infrastructure backend-marketing backend-ranking worker api",
    "test:all": "bun test --preload ./test/setup.ts --ignore='apps/e2e/**'",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --preload ./test/setup.ts --ignore='apps/e2e/**'",
    "quality": "bun run lint:all && bun run test:all",
    "quality:full": "bun run lint:all && bun run test:all && bun run test:e2e",
    "qodana:local": "mkdir -p .qodana/code-coverage && cp coverage/lcov.info .qodana/code-coverage/ && docker run --rm -it -p 8080:8080 -v $(pwd):/data/project -e QODANA_TOKEN=$QODANA_TOKEN jetbrains/qodana-js:2024.3-eap scan --show-report --cache-dir ./.qodana-cache --profile-name qodana.starter",
    "audit:push": "bun run typecheck && bun run lint:all && bun run test:coverage && bun run audit:arch",
    "audit:arch": "depcruise libs apps --config .dependency-cruiser.cjs",
    "audit:full": "bun run test:coverage && bun run qodana:local",
    "release": "nx release --skip-publish",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
