{
    "name": "shared-core",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/shared/core/src",
    "tags": [
        "scope:shared",
        "type:util"
    ],
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/shared/core/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bun test libs/shared/core"
            }
        }
    }
}