{
    "name": "backend-infrastructure",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/backend/infrastructure/src",
    "tags": [
        "type:lib",
        "scope:shared",
        "layer:backend"
    ],
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/backend/infrastructure/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bun test libs/backend/infrastructure"
            }
        }
    }
}