{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/worker/Dockerfile",
    "watchPatterns": [
      "apps/worker/**",
      "libs/backend/infrastructure/**",
      "libs/shared/types/**",
      "libs/shared/core/**",
      "package.json",
      "tsconfig.base.json"
    ]
  },
  "deploy": {
    "startCommand": "bun apps/worker/src/index.ts",
    "restartPolicyType": "ON_FAILURE"
  }
}
