{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/webapp/Dockerfile",
        "watchPatterns": [
            "apps/webapp/**",
            "libs/shared/**",
            "package.json",
            "bun.lock",
            "tsconfig.base.json"
        ]
    },
    "deploy": {
        "startCommand": "bun .output/server/index.mjs",
        "restartPolicyType": "ON_FAILURE"
    }
}