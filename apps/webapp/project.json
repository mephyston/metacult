{
  "name": "webapp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/webapp/app",
  "tags": ["type:app", "scope:webapp", "layer:frontend"],
  "// targets": "to see all targets run: nx show project webapp --web",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/webapp/app/**/*.{ts,tsx,js,jsx,vue}",
          "apps/webapp/server/**/*.{ts,tsx,js,jsx,vue}",
          "apps/webapp/*.{ts,tsx,js,jsx,vue}",
          "!apps/webapp/.nuxt/**"
        ]
      }
    }
  }
}
