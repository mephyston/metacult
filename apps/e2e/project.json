{
  "name": "e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/e2e",
  "tags": [
    "type:app",
    "scope:e2e",
    "layer:testing"
  ],
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test",
        "cwd": "apps/e2e"
      }
    },
    "test:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --ui",
        "cwd": "apps/e2e"
      }
    },
    "test:debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --debug",
        "cwd": "apps/e2e"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun install && bunx playwright install chromium",
        "cwd": "apps/e2e"
      }
    }
  }
}
