{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/api/Dockerfile"
    },
    "deploy": {
        "startCommand": "bun run db:migrate && bun run apps/api/index.ts",
        "restartPolicyType": "ON_FAILURE"
    }
}