{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/api/Dockerfile",
        "watchPatterns": [
            "apps/api/**",
            "libs/backend/**",
            "libs/shared/**",
            "package.json",
            "bun.lockb",
            "tsconfig.base.json"
        ]
    },
    "deploy": {
        "startCommand": "bun run db:migrate && bun apps/api/index.ts",
        "restartPolicyType": "ON_FAILURE"
    }
}