{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/api/Dockerfile",
    "watchPatterns": [
      "apps/api/**",
      "libs/backend/**",
      "libs/shared/core/**",
      "libs/shared/types/**",
      "package.json",
      "tsconfig.base.json"
    ]
  },
  "deploy": {
    "startCommand": "bun apps/api/index.ts",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
