{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/website/Dockerfile",
        "watchPatterns": [
            "apps/website/**",
            "libs/shared/**",
            "package.json",
            "bun.lock",
            "tsconfig.base.json"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE"
    }
}