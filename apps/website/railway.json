{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/website/Dockerfile",
        "watchPatterns": [
            "apps/website/**",
            "libs/shared/**",
            "package.json",
            "tsconfig.base.json"
        ]
    },
    "deploy": {
        "startCommand": "bun dist/server/entry.mjs",
        "restartPolicyType": "ON_FAILURE",
        "rootDirectory": "/"
    }
}