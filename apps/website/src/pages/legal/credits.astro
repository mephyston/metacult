---
import Layout from '../../layouts/Layout.astro';
import {
    Card,
    CardContent,
    CardFooter,
    CardHeader,
    CardTitle,
} from '@metacult/shared-ui';
---

<Layout title="Crédits & Sources - MetaCult">
    <div class="container mx-auto py-10 px-4 max-w-5xl">
        <!-- Header -->
        <div class="mb-10 text-center space-y-4">
            <h1
                class="text-4xl font-bold tracking-tight text-white sm:text-5xl"
            >
                Crédits & Sources de Données
            </h1>
            <p class="text-lg text-gray-400 max-w-2xl mx-auto">
                MetaCult agrège des données provenant de sources publiques
                tierces pour enrichir votre expérience. Voici les fournisseurs
                qui rendent ce service possible.
            </p>
        </div>

        <!-- Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- TMDB -->
            <Card
                client:visible
                class="bg-card/50 border-white/10 backdrop-blur-sm"
            >
                <CardHeader>
                    <CardTitle class="text-center text-white"
                        >The Movie Database</CardTitle
                    >
                </CardHeader>
                <CardContent>
                    <p class="text-sm text-gray-400 text-center">
                        This product uses the TMDB API but is not endorsed or
                        certified by TMDB.
                    </p>
                </CardContent>
                <CardFooter class="justify-center">
                    <a
                        href="https://www.themoviedb.org/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-primary hover:underline text-sm text-white"
                    >
                        Visiter TMDB
                    </a>
                </CardFooter>
            </Card>

            <!-- IGDB -->
            <Card
                client:visible
                class="bg-card/50 border-white/10 backdrop-blur-sm"
            >
                <CardHeader>
                    <CardTitle class="text-center text-white">IGDB</CardTitle>
                </CardHeader>
                <CardContent>
                    <p class="text-sm text-gray-400 text-center">
                        Powered by IGDB. Base de données massive pour les jeux
                        vidéo.
                    </p>
                </CardContent>
                <CardFooter class="justify-center">
                    <a
                        href="https://www.igdb.com/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-primary hover:underline text-sm text-white"
                    >
                        Visiter IGDB
                    </a>
                </CardFooter>
            </Card>

            <!-- Google Books -->
            <Card
                client:visible
                class="bg-card/50 border-white/10 backdrop-blur-sm"
            >
                <CardHeader>
                    <CardTitle class="text-center text-white"
                        >Google Books</CardTitle
                    >
                </CardHeader>
                <CardContent>
                    <p class="text-sm text-gray-400 text-center">
                        Données livresques fournies par Google Books API.
                    </p>

                    <div
                        class="flex items-center justify-center mb-4 h-12 gap-2 grayscale transition-all duration-300 hover:grayscale-0"
                    >
                        <span
                            class="text-xs font-semibold text-muted-foreground"
                            >Powered by</span
                        >
                        <svg
                            class="h-8 w-auto"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                                fill="#4285F4"></path>
                            <path
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                                fill="#34A853"></path>
                            <path
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.84z"
                                fill="#FBBC05"></path>
                            <path
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                                fill="#EA4335"></path>
                        </svg>
                        <span class="text-lg font-bold text-white"
                            >Google Books</span
                        >
                    </div>
                </CardContent>
                <CardFooter class="justify-center">
                    <a
                        href="https://books.google.com/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-primary hover:underline text-sm text-white"
                    >
                        Visiter Google Books
                    </a>
                </CardFooter>
            </Card>
        </div>
    </div>
</Layout>
