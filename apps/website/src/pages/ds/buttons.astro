---
import { Button } from '@metacult/shared-ui';
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
            rel="stylesheet"
        />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>DS - Buttons | Metacult</title>
    </head>
    <body class="bg-background text-foreground p-10 font-sans">
        <h1 class="text-4xl font-bold mb-8 text-primary">
            Design System: Buttons
        </h1>

        <div class="space-y-12">
            <section>
                <h2
                    class="text-2xl font-semibold mb-6 border-b border-muted pb-2"
                >
                    Standard Variants
                </h2>

                <div class="mb-6">
                    <h3 class="text-lg text-muted-foreground mb-4">
                        Base Styles
                    </h3>
                    <div class="flex flex-wrap gap-4">
                        <Button variant="default">Default</Button>
                        <Button variant="secondary">Secondary</Button>
                        <Button variant="destructive">Destructive</Button>
                        <Button variant="outline">Outline</Button>
                        <Button variant="ghost">Ghost</Button>
                        <Button variant="link">Link</Button>
                    </div>
                </div>

                <div class="mb-6">
                    <h3 class="text-lg text-muted-foreground mb-4">Sizes</h3>
                    <div class="flex flex-wrap gap-4 items-center">
                        <Button size="sm">Small</Button>
                        <Button size="default">Default</Button>
                        <Button size="lg">Large</Button>
                        <Button size="icon">
                            <span>+</span>
                        </Button>
                    </div>
                </div>

                <div class="mb-6">
                    <h3 class="text-lg text-muted-foreground mb-4">
                        Custom Styles (Utility Classes)
                    </h3>
                    <div class="flex flex-wrap gap-4 items-center">
                        <Button class="rounded-full">Pill Shape</Button>
                        <Button class="shadow-lg">With Shadow</Button>
                        <Button class="bg-green-600 hover:bg-green-700"
                            >Custom Success Color</Button
                        >
                    </div>
                </div>
            </section>
        </div>
    </body>
</html>
