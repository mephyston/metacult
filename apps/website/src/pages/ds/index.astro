---
import LayoutDS from '../../layouts/LayoutDS.astro';
---

<LayoutDS title="Design System | Metacult">
    <h1 class="text-4xl font-display mb-8 text-primary">Design System Index</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a
            href="/ds/buttons"
            class="block p-6 bg-gray-900 border border-gray-800 rounded-lg hover:border-primary transition-colors group"
        >
            <h2
                class="text-xl font-bold mb-2 text-white group-hover:text-primary"
            >
                Buttons
            </h2>
            <p class="text-gray-400">
                Primary, secondary, ghosts, and social buttons variants.
            </p>
        </a>

        <a
            href="/ds/cards"
            class="block p-6 bg-gray-900 border border-gray-800 rounded-lg hover:border-primary transition-colors group"
        >
            <h2
                class="text-xl font-bold mb-2 text-white group-hover:text-primary"
            >
                Cards
            </h2>
            <p class="text-gray-400">
                Content containers, images, and action footers.
            </p>
        </a>
    </div>
</LayoutDS>
