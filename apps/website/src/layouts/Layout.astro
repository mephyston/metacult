---
import { Header, Footer, Search } from '@metacult/shared-ui';
import ThemeHeadScript from '../components/shared/ThemeHeadScript.astro';
import '@metacult/shared-ui/styles/global.css';

// âœ… Self-hosted fonts
import '@fontsource/roboto/300.css';
import '@fontsource/roboto/400.css';
import '@fontsource/roboto/500.css';
import '@fontsource/roboto/700.css';

interface Props {
    title: string;
    description?: string;
    bodyClass?: string;
}

const {
    title,
    description = 'Le Radar Social pour votre Culture.',
    bodyClass = '',
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <ThemeHeadScript />
    </head>
    <body class={`font-sans min-h-screen flex flex-col ${bodyClass}`}>
        <Header client:load>
            <!-- Shared Navigation from default slot -->
            <div slot="search" class="contents">
                <Search client:load />
            </div>
        </Header>
    </body><main class="flex-1">
        <slot />
    </main>

    <Footer />
</html>
