---
import { Header, Footer, Search } from '@metacult/shared-ui';
import ThemeHeadScript from '../components/shared/ThemeHeadScript.astro';
import { fr } from '../i18n/fr';
import pkg from '../../package.json';
import '@metacult/shared-ui/styles/global.css';
import { getApiUrl } from '../utils/get-api-url';

// âœ… Self-hosted fonts
import '@fontsource/roboto/300.css';
import '@fontsource/roboto/400.css';
import '@fontsource/roboto/500.css';
import '@fontsource/roboto/700.css';

interface Props {
    title: string;
    description?: string;
    bodyClass?: string;
}

const {
    title,
    description = 'Le Radar Social pour votre Culture.',
    bodyClass = '',
} = Astro.props;

// Fetch trending highlights for mega-menu (SSR)
let trendingHighlights = {
    movie: null as any,
    tv: null as any,
    game: null as any,
    book: null as any,
};

try {
    const baseUrl = getApiUrl();

    // Parallel fetch for all categories
    const [movieRes, tvRes, gameRes, bookRes] = await Promise.all([
        fetch(
            `${baseUrl}/api/discovery/feed/trending?type=movie&limit=1`,
        ).catch(() => null),
        fetch(`${baseUrl}/api/discovery/feed/trending?type=tv&limit=1`).catch(
            () => null,
        ),
        fetch(`${baseUrl}/api/discovery/feed/trending?type=game&limit=1`).catch(
            () => null,
        ),
        fetch(`${baseUrl}/api/discovery/feed/trending?type=book&limit=1`).catch(
            () => null,
        ),
    ]);

    // Parse responses safely
    const parseResponse = async (res: Response | null) => {
        if (!res?.ok) return null;
        const data = await res.json();
        return Array.isArray(data) && data.length > 0 ? data[0] : null;
    };

    trendingHighlights = {
        movie: await parseResponse(movieRes),
        tv: await parseResponse(tvRes),
        game: await parseResponse(gameRes),
        book: await parseResponse(bookRes),
    };
} catch (error) {
    console.error('[Layout] Failed to fetch trending highlights:', error);
}
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <ThemeHeadScript />

        <!-- Runtime Environment Variables for Client-Side Hydration (Railway) -->
        <script
            is:inline
            define:vars={{
                PUBLIC_WEBAPP_URL:
                    process.env.PUBLIC_WEBAPP_URL ||
                    import.meta.env.PUBLIC_WEBAPP_URL,
                PUBLIC_WEBSITE_URL:
                    process.env.PUBLIC_WEBSITE_URL ||
                    import.meta.env.PUBLIC_WEBSITE_URL,
                PUBLIC_API_URL:
                    process.env.PUBLIC_API_URL ||
                    import.meta.env.PUBLIC_API_URL,
            }}
        >
            window.__ENV__ = {
                PUBLIC_WEBAPP_URL: PUBLIC_WEBAPP_URL,
                PUBLIC_WEBSITE_URL: PUBLIC_WEBSITE_URL,
                PUBLIC_API_URL: PUBLIC_API_URL,
            };
        </script>
    </head>
    <body class={`font-sans min-h-screen flex flex-col ${bodyClass}`}>
        <Header
            client:load
            labels={fr.header}
            trendingHighlights={trendingHighlights}
        >
            <!-- Shared Navigation from default slot -->
            <div slot="search" class="contents">
                <Search client:load />
            </div>
        </Header>
    </body><main class="flex-1">
        <slot />
    </main>

    <Footer
        client:idle
        version={process.env.APP_VERSION ||
            import.meta.env.APP_VERSION ||
            'vDev'}
        commit={`#${(process.env.GIT_SHA || import.meta.env.GIT_SHA || 'local').substring(0, 7)}`}
    />
</html>
